<h1>Registered Users</h1>

<%= link_to 'New User', new_user_path %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>action</th>
      <th>role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to "Delete", user, data: { turbo_confirm: "Are you sure you want to delete the user '" + user.name + "'", turbo_method: :delete} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

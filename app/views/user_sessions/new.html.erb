<h1>Login page</h1>
<%= form_with model: @user, url: user_sessions_path do |f| %>
  <div class="input-container">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="input-container">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <p>
    <%= f.submit 'Login' %>
  </p>
<% end %>
